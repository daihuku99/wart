<!DOCTYPE html>
<html>
  <head>
    <title>Wart</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'public/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'public/application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body data-turbolinks="false">
    <header>
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-brand">
          <%= link_to '/' do %>
            <%= image_tag "wart-logo-6.png", alt: "LOGO", class: 'logo', size: '200x80' %>
          <% end %>
        </div>
        <div class="navbar-user-name">
          <% if user_signed_in? %>
            <p>Welcome <%= current_user.name %></p>
          <% else %>
            <p>Welcome to Wart!</p>
          <% end %>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= link_to 'my page', user_path(current_user), class: "glyphicon glyphicon-home" %></li>
            <li><%= link_to 'Arts', arts_path, class: "glyphicon glyphicon-picture" %></li>
            <li><%= link_to 'Artists', users_path, class: "glyphicon glyphicon-user" %></li>
            <li><%= link_to 'Exhibitions', exhibitions_path, class: "glyphicon glyphicon-tower" %></li>
            <li><%= link_to 'logout', destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %></li>
          <% else %>
            <li><%= link_to 'Arts', arts_path, class: "glyphicon glyphicon-picture" %></li>
            <li><%= link_to 'Artists', users_path, class: "glyphicon glyphicon-user" %></li>
            <li><%= link_to 'Exhibitions', exhibitions_path, class: "glyphicon glyphicon-tower" %></li>
            <li><%= link_to 'Login', new_user_session_path, class: "glyphicon glyphicon-log-in" %></li>
            <li><%= link_to 'Sign up', new_user_registration_path, class: "glyphicon glyphicon-heart-empty" %></li>
          <% end %>
        </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
