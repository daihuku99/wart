<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <h4 class="title">New Exhibition</h4>
    <div class="cart-art-form">
      <div class="row">
        <% @cart_arts.each do |cart_art| %>
          <div class="col-xs-3">
            <%= attachment_image_tag cart_art.art, :image, :fill, 100, 100, format: 'jpeg' %><br>
            <%= cart_art.art.title %>
            <%= link_to 'cancel', cart_art_path(cart_art),method: :delete, class: 'btn btn-default' %>
          </div>
        <% end %>
      </div>
      <div class="row">
        <%= link_to 'Change all', empty_path, method: :delete, class: 'btn btn-default' %>
        <%= link_to 'add art', arts_path(user_id: current_user.id), class: 'btn btn-default' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="exhibition-form">
      <%= form_with model: @exhibition, url: exhibitions_path, method: :post, local: true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
        <div class="col-xs-3 col-xs-offset-1">
          <%= f.label :title %>
          <%= f.text_field :title %><br>

          <%= f.label :detail %><br>
          <%= f.text_area :detail %>
        </div>
        <div class="col-xs-8">
          <%= f.label :start_date %>
          <%= f.datetime_select :start_date, {default: DateTime.now.in_time_zone('Tokyo')} %><br>

          <%= f.label :end_date %>
          <%= f.datetime_select :end_date, {default: DateTime.now.in_time_zone('Tokyo')} %><br><br><br><br>

          <%= f.submit 'Create Exhibition', class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
  </div>
</div>