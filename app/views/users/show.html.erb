<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-xs-3 profile-container">
      <%= render 'users/template', user: @user %>
    </div>
    <div class="col-xs-9">
      <div class="col-xs-5">
        <% @user.arts.each do |art| %>
          <div class="col-xs-4">
            <%= attachment_image_tag art, :image, :fill, 100, 100, format: 'jpeg' %>
            <%= link_to art.title, art_path(art) %><br>
          </div>
        <% end %>
      </div>
      <% if user_signed_in? %>
        <div class="col-xs-4">
          <% current_user.exhibitions.each do |exhibition| %>
            <div class="col-xs-4">
              <%= exhibition.title %>
              <%= link_to '編集する', edit_exhibition_path(exhibition), class: 'btn btn-default' %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>