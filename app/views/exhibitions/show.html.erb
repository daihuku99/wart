<% if (@exhibition.start_date..@exhibition.end_date).cover?(DateTime.now.in_time_zone('Tokyo')) %>
  <div class="container">
    <div class="row">
      <h3><%= @exhibition.title %>presented by <%= @exhibition.user.name %></h3>
    </div>
    <div class="row">
      <div class="col-xs-5">
        <div class="row">
          <%= attachment_image_tag @exhibition.user, :profile_image, :fill, 200, 200, format: 'jpeg' %><br>
          <%= @exhibition.user.name %>
          <%= @exhibition.user.introduction %>
        </div>
        <div class="row">
          <p><%= @exhibition.detail %></p>
        </div>
      </div>
      <div class="col-xs-7">
        <% @exhibition.exhibition_arts.each do |exhibition_art| %>
          <%= attachment_image_tag exhibition_art.art, :image, :fill, 300, 300, format: 'jpeg' %>
          <h4><%= exhibition_art.art.user.name %></h4>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <h6>展覧会は終了しました</h6>
<% end %>