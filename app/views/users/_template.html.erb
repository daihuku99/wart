<div class="profile-container">
  <div class="profile-image-window">
    <%= attachment_image_tag user, :profile_image, :fill, 90, 90, format: 'jpeg', fallback: "no-image.jpeg", class: 'profile-image' %>
    <div class="user-info">
      <h3><%= user.name %></h3><br>
    </div>
  </div>
  <div class="introduction">
    <p><%= user.name %>'s comment</p>
    <p><%= user.introduction %></p><br>
  </div>
  <% if user == current_user %>
    <%= link_to new_art_path do %>
      <span class="glyphicon glyphicon-pencil btn btn-default" aria-hidden="true">投稿する</span>
    <% end %>
    <%= link_to edit_user_path(user) do %>
      <span class="glyphicon glyphicon-wrench btn btn-default" aria-hidden="true">編集する</span>
    <% end %>
    <div id="calendar"></div>
    <%= link_to '予定を入力する', new_event_path, class: 'btn btn-default' %>
  <% end %>
</div>